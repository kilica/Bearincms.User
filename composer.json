{
    "name": "kilica/bearin-user",
    "description": "Bearin CMS User Module - User management functionality for BEAR.Sunday framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "kilica",
            "email": "kilica.hikawa@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "bear/sunday": "^1.14",
        "bear/package": "^1.14",
        "ray/aura-sql-module": "^1.11",
        "ray/aura-session-module": "^1.1",
        "ray/validate-module": "^1.0",
        "ray/role-module": "^1.0",
        "aura/sql": "^5.0",
        "aura/session": "^2.1",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "BearinUser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BearinUser\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs src tests",
        "cbf": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
